//Write a program to input and add two numbers
#include <stdio.h>

int main() {
    // Declare variables for the two numbers and the sum
    float num1, num2, sum;

    // Ask the user to input two numbers
    printf("Enter the first number: ");
    scanf("%f", &num1);  // Input the first number

    printf("Enter the second number: ");
    scanf("%f", &num2);  // Input the second number

    // Add the numbers
    sum = num1 + num2;

    // Display the result
    printf("The sum of %.2f and %.2f is: %.2f\n", num1, num2, sum);

    return 0;
}
