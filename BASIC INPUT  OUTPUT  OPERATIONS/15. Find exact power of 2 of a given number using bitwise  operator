#include <stdio.h>

int main() {
    int num;

    // Input a number
    printf("Enter a number: ");
    scanf("%d", &num);

    // Check if the number is an exact power of 2 using bitwise operator
    if (num > 0 && (num & (num - 1)) == 0) {
        printf("The number is an exact power of 2.\n");
    } else {
        printf("The number is not an exact power of 2.\n");
    }

    return 0;
}
