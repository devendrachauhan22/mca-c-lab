#include <stdio.h>

int main() {
    int n, square = 0;

    // Input the number from the user
    printf("Enter an integer: ");
    scanf("%d", &n);

    // Calculate the square of the number using addition
    for (int i = 0; i < n; i++) {
        square += n;
    }

    // Output the result
    printf("The square of %d is: %d\n", n, square);

    return 0;
}
